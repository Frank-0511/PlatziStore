{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@containers/*": ["containers/*"],
      "@components/*": ["components/*"],
      "@routes/*": ["routes/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@styles/*": ["styles/*"],
      "@context/*": ["context/*"],
      "@icons/*": ["assets/icons/*"],
      "@logos/*": ["assets/logos/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", ".next"]
}
